{% block title %}Sales{% endblock %}

{% block body %}
    <h1>Sales</h1>

    <table class="responstable">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sale.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ sale.name }}</td>
            </tr>
            <tr>
